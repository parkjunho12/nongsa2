<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container2"
        android:layout_marginBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">
                <ImageView
                    android:id="@+id/bg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="left"

                    android:paddingLeft="10dp">


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="농사 직설"
                        android:textStyle="bold"
                        android:textColor="@color/cardview_dark_background"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="right"

                    android:paddingRight="10dp">

                    <Button
                        android:id="@+id/search"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_notifications_black_24dp" />

                </LinearLayout>
            </LinearLayout>
            <!-- TODO: Update blank fragment layout -->
            <!--<TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hello_blank_fragment" />-->

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="지역별 농촌"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:text="귀농 귀촌 방\n 게시판"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:id="@+id/imbtn1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"

                        android:src="@drawable/barley" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="80dp"
                        android:layout_marginVertical="30dp"
                        android:alpha="0.5"
                        android:background="#74000000" />

                    <ImageButton
                        android:id="@+id/garden"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:text="텃밭 분양 \n게시판"
                        android:src="@drawable/bear" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="80dp"
                        android:layout_marginVertical="30dp"
                        android:alpha="0.5"
                        android:background="#74000000" />

                    <ImageButton
                        android:text="귀농 귀촌\n지능형 상담"
                        android:id="@+id/consultation"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bull" />




                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:text="귀농 귀촌 \n지원 정책 "
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/chiansaw" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="80dp"
                        android:layout_marginVertical="30dp"
                        android:background="#74000000"
                        android:alpha="0.5" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cut" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="80dp"
                        android:layout_marginVertical="30dp"
                        android:alpha="0.5"
                        android:background="#74000000" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:scaleType="fitCenter"
                        android:src="@drawable/berry" />



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>