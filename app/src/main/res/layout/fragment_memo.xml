<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MemoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="새로운 정보를 등록하세요!"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView14"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="구분"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/GUBUN"
                        android:entries="@array/gubun"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView11"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="거래 유형"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/DEAL_TYPE"
                        android:entries="@array/maemae"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView6"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="시,도명"
                        android:layout_weight="1.8"/>
                    <Spinner
                        android:id="@+id/spinner1"
                        android:entries="@array/sido"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/textView10"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:text="상세주소" />


                        <EditText
                            android:id="@+id/ADDR"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:hint="ex) 안서동 상명대길44"
                            tools:layout_editor_absoluteX="29dp"
                            tools:layout_editor_absoluteY="74dp" />

                    </LinearLayout>
                    <Button
                        android:id="@+id/check"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="재범's 버튼"
                        android:layout_weight="1"/>

                </LinearLayout>



                <TextView
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="소유주" />

                <EditText
                    android:id="@+id/OWNER_NM"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 홍길동"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="130dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호" />

                <EditText
                    android:id="@+id/OWNER_CONTACT"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 01012345678"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="188dp" />


                <TextView
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="희망매매가격" />

                <EditText
                    android:id="@+id/DEAL_AMOUNT"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 40000000"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="261dp" />
                <TextView
                    android:id="@+id/textView12"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="거래 참고사항" />

                <EditText
                    android:id="@+id/DEAL_BIGO"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ex) 자세한 사항 연락주세요"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="261dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btnGallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사진 등록"
                        android:layout_weight="2"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="등록하기"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/Back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="뒤로가기"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>